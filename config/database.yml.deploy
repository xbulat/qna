default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: <%= ENV.fetch("MYSQL_USER", 'root') %>
  host: <%= ENV.fetch("MYSQL_HOST", '127.0.0.1') %>
  password: <%= ENV.fetch("MYSQL_PASSWORD", '') %>

development:
  <<: *default
  database: qna_development

test:
  <<: *default
  database: qna_test

production:
  <<: *default
  database: qna_production
